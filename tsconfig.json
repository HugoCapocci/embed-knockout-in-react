{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "declaration": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "keyofStringsOnly": false,
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "scripthost",
      "es2015",
      "es2015.promise",
      "es2016",
      "es2017",
      "es2018.promise"
    ],
    "module": "CommonJS",
    "strict": true,
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "target": "es5",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
